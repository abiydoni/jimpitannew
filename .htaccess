# Aktifkan modul Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect ke HTTPS (opsional, hapus jika tidak perlu)
    RewriteCond %{HTTPS} !=on
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Hilangkan ekstensi .php dari URL
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^\.]+)$ $1.php [L,QSA]

    # Redirect dari /index.php ke /
    RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s/index\.php [NC]
    RewriteRule ^index\.php$ / [R=301,L]
</IfModule>

# Tambahkan Cache-Control Header
<IfModule mod_headers.c>
    # Header untuk file HTML, CSS, JS, dan media
    <FilesMatch "\.(html|htm|css|js|jpg|jpeg|png|gif|ico|svg|webp|woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires 0
    </FilesMatch>
</IfModule>

# Disable Directory Listing
Options -Indexes

# Error Handling (opsional)
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html
